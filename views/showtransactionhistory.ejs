<%- include("header") -%>

<%  if(alltransactions.length === 0){   %>
<p>No Transactions Yet.</p>

<%    }else{  %>

<div class="card customers-card">
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Transactions</th>
      </tr>
    </thead>
    <tbody>

      <%  for(var i = 0; i< alltransactions.length; i++){  %>
      <tr>
        <th scope="row"><%= (i+1) %>.</th>
        <td><%= alltransactions[i] %></td>
      </tr>
      <%  };     %>

    </tbody>
  </table>
</div>

<%   }  %>


    <form class="gobackbtn" action="/transferhistoryinfo" method="get">
      <button class="btn btn-dark" type="submit" name="button">Go Back</button>
    </form>

<%- include("footer") -%>
